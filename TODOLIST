import tkinter as tk

def add_task():
    task = entry.get()
    if task:
        listbox.insert("end", task)
        entry.delete(0, "end")

def delete_task():
    try:
        task_index = listbox.curselection()[0]
        listbox.delete(task_index)
    except:
        print("Select a task to delete")

def clear_tasks():
    listbox.delete(0, "end")

root = tk.Tk()
root.title("To-Do List")

frame = tk.Frame(root)
frame.pack()

listbox = tk.Listbox(frame, width=30, height=10)
listbox.pack(side="left")

scrollbar = tk.Scrollbar(frame)
scrollbar.pack(side="right", fill="y")

listbox.config(yscrollcommand=scrollbar.set)
scrollbar.config(command=listbox.yview)

entry = tk.Entry(root, width=25)
entry.pack()

add_button = tk.Button(root, text="Add", command=add_task)
add_button.pack()

delete_button = tk.Button(root, text="Delete", command=delete_task)
delete_button.pack()

clear_button = tk.Button(root, text="Clear", command=clear_tasks)
clear_button.pack()

root.mainloop()
